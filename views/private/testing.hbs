<div class="table-responsive table-container">
    <form action="">
        <table class="table folders-table table-hover">
        <thead>
            <tr>
            <th scope="col">Name your space</th>
            <th scope="col">Asign an ID</th>
            <th scope="col">Create your Space</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><input class="input-create" type="text" name="spaceName" id="" placeholder="Write your space name."></td>
                <td><input class="input-create" type="text" name="spaceId" id="" placeholder="Write a 5 digit number"></td>
                <td>
                    <button class="create-btn" type="submit">Create a new Space</button>
                </td>
            </tr>
        </table>
    </form>
</div>
